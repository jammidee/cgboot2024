aside.control-sidebar.control-sidebar-dark
	ul.nav.nav-tabs.nav-justified.control-sidebar-tabs
		li
			a(href='#control-sidebar-layout-tab' data-toggle='tab')
				i.fa.fa-home
		li
			a(href='#control-sidebar-home-tab' data-toggle='tab')
				i.fa.fa-home
		li
			a(href='#control-sidebar-settings-tab' data-toggle='tab')
				i.fa.fa-gears
				
				
	//Start the TAB body here
	div.tab-content
	
		//Added by JMD 12/27/2017
		//==============================================
		//GENERAL SETTINGS
		//==============================================	
		div.tab-pane(id='control-sidebar-layout-tab')
			h3.control-sidebar-heading Layout Options
				
			h3.control-sidebar-heading
				| Template Theme
				
				
				
				
		//Added by JMD 12/27/2017
		//==============================================
		//GENERAL SETTINGS
		//=============================================
		
		div.tab-pane(id='control-sidebar-home-tab')
			h3.control-sidebar-heading
				| Recent Activity
				
			
			
			
		//Added by JMD 12/27/2017
		//==============================================
		//GENERAL SETTINGS
		//==============================================
		div.tab-pane(id='control-sidebar-settings-tab')
			form(id='settings')
				h3.control-sidebar-heading
					| General Settings

				div.form-group
					label.control-sidebar-subheading Report Panel Usage
						input.pull-right( onclick = 'clkmailredirect()' type='checkbox' checked)
					p View report on the panel usage in the system

				div.form-group
					label.control-sidebar-subheading Allow mail redirect
						input.pull-right( type='checkbox' checked)
					p Other sets of options are available


